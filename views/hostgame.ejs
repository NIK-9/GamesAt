    <!-- Modal -->
    <div class="modal fade" id="host" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Hosting a Game</h4>
                </div>
                <form action="/hostinggame" method="post" class="register-form">
                    <div class="modal-body">
                            <input hidden type="text" name="gametype" value="<%=hostgame%>"/>
                            <input type="text" class="form-control" name="title" placeholder="Game title" />
                            <br /><br />
                            <input type="text" class="form-control" name="location" placeholder="Game location" />
                            <br /><br />
                            <div class="row">
                                <div class="col-sm-1"></div>
                                <div class="col-sm-4">
                                    <input type="text" class="form-control" name="date" placeholder="YYYY/MM/DD" />
                                </div>
                                <div class="col-sm-4">
                                    <input type="text" class="form-control" name="time" placeholder="hh:mm" />
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label class="radio-inline">
                                            <input type="radio" id="am_pm" name="am_pm" value="am" checked>AM
                                        </label>
                                        <label class="radio-inline">
                                            <input type="radio" id="am_pm" name="am_pm" value="pm">PM
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <br /><br />
                            <textarea rows="4" class="form-control"  cols="30" name="description" placeholder="Describe game here..."></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default logbutton">Host</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
    <div class="row">
